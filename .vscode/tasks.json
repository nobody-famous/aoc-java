{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "mvn",
            "args": ["-B", "compile"],
            "problemMatcher": []
        },
        {
            "label": "Run 2018",
            "type": "shell",
            "command": "mvn",
            "windows": {
                "args": ["exec:java", "-D'\"exec.mainClass\"'='\"aoc.y2018.Runner\"'"]
            },
            "linux": {
                "args": ["exec:java", "-Dexec.mainClass=aoc.y2018.Runner"]
            },
            "problemMatcher": []
        },
        {
            "label": "Run 2019",
            "dependsOn": "Compile",
            "type": "shell",
            "command": "mvn",
            "windows": {
                "args": ["exec:java", "-D'\"exec.mainClass\"'='\"aoc.y2019.Runner\"'"]
            },
            "linux": {
                "args": ["exec:java", "-Dexec.mainClass=aoc.y2019.Runner"]
            },
            "problemMatcher": []
        },
        {
            "label": "Run 2020",
            "dependsOn": "Compile",
            "type": "shell",
            "command": "mvn",
            "windows": {
                "args": ["exec:java", "-D'\"exec.mainClass\"'='\"aoc.y2020.Runner\"'"]
            },
            "linux": {
                "args": ["exec:java", "-Dexec.mainClass=aoc.y2020.Runner"]
            },
            "problemMatcher": []
        },
        {
            "label": "Run 2023",
            "dependsOn": "Compile",
            "type": "shell",
            "command": "mvn",
            "windows": {
                "args": ["exec:java", "-D'\"exec.mainClass\"'='\"aoc.y2023.Runner\"'"]
            },
            "linux": {
                "args": ["exec:java", "-Dexec.mainClass=aoc.y2023.Runner"]
            },
            "problemMatcher": []
        },
        {
            "label": "Test 2023",
            "dependsOn": "Compile",
            "type": "shell",
            "command": "mvn",
            "args": ["test", "-Dtest=aoc.y2023.day2.**"],
            "problemMatcher": []
        },
        {
            "label": "DB Update",
            "type": "shell",
            "command": "mvn",
            "args": ["liquibase:update"],
            "problemMatcher": []
        },
        {
            "label": "DB Rollback",
            "type": "shell",
            "command": "mvn",
            "args": ["liquibase:rollback", "-Dliquibase.rollbackCount=1"],
            "problemMatcher": []
        },
        {
            "label": "Start DB Docker",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--name",
                "aoc-postgres",
                "--rm",
                "-it",
                "-e",
                "POSTGRES_PASSWORD=postgres",
                "-v",
                "${workspaceFolder}/db-data:/var/lib/postgresql/data",
                "-p",
                "5432:5432",
                "postgres"
            ],
            "problemMatcher": []
        }
    ]
}
