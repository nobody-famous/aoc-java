{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "mvn",
            "args": ["-B", "compile"],
            "problemMatcher": []
        },
        {
            "label": "Run 2018",
            "type": "shell",
            "command": "mvn",
            "windows": {
                "args": ["exec:java", "-D'\"exec.mainClass\"'='\"aoc.y2018.Runner\"'"]
            },
            "linux": {
                "args": ["exec:java", "-Dexec.mainClass=aoc.y2018.Runner"]
            },
            "problemMatcher": []
        },
        {
            "label": "Run 2019",
            "dependsOn": "Compile",
            "type": "shell",
            "command": "mvn",
            "windows": {
                "args": ["exec:java", "-D'\"exec.mainClass\"'='\"aoc.y2019.Runner\"'"]
            },
            "linux": {
                "args": ["exec:java", "-Dexec.mainClass=aoc.y2019.Runner"]
            },
            "problemMatcher": []
        },
        {
            "label": "Run 2020",
            "dependsOn": "Compile",
            "type": "shell",
            "command": "mvn",
            "windows": {
                "args": ["exec:java", "-D'\"exec.mainClass\"'='\"aoc.y2020.Runner\"'"]
            },
            "linux": {
                "args": ["exec:java", "-Dexec.mainClass=aoc.y2020.Runner"]
            },
            "problemMatcher": []
        },
        {
            "label": "Run 2023",
            "dependsOn": "Compile",
            "type": "shell",
            "command": "mvn",
            "windows": {
                "args": ["exec:java", "-D'\"exec.mainClass\"'='\"aoc.y2023.Runner\"'"]
            },
            "linux": {
                "args": ["exec:java", "-Dexec.mainClass=aoc.y2023.Runner"]
            },
            "problemMatcher": []
        },
        {
            "label": "Test 2023",
            "dependsOn": "Compile",
            "type": "shell",
            "command": "mvn",
            "args": ["test", "-Dtest=aoc.y2023.**"],
            // "args": ["test"],
            "problemMatcher": []
        },
        {
            "label": "DB Update",
            "type": "shell",
            "command": "mvn",
            "args": ["liquibase:update"],
            "problemMatcher": []
        },
        {
            "label": "DB Migrate",
            "dependsOn": "DB Update",
            "type": "shell",
            "command": "mvn",
            "args": ["liquibase:tag", "-Dliquibase.tag=2023.day1"],
            "problemMatcher": []
        },
        {
            "label": "DB Clear",
            "type": "shell",
            "command": "mvn",
            "args": ["liquibase:rollback", "-Dliquibase.rollbackTag=empty"],
            "problemMatcher": []
        }
    ]
}
